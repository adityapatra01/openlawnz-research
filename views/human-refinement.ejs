<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>OpenLaw NZ : <%= pageTitle %></title>
		<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" rel="stylesheet" />
		<link rel="stylesheet" href="/global/index.css" />
		<link rel="stylesheet" href="/human-refinement/index.css" />
		<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.4.456/pdf.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.4.456/pdf.worker.min.js"></script>
		<script type="module" src="/human-refinement/index.js"></script>
	</head>
	<body>
        
        <%- include('partials/header.ejs', { pageKey, pageTitle }) %>
		
		<div id="wrap" class="loading">
			<nav>
				<div id="casesList">
					<!-- <input type="search" placeholder="filter" /> -->
					<div id="caseListTable">
						<table>
							<thead>
								<tr>
									<th>Case name</th>
									<th><span title="Completed count">#</span></th>
								</tr>
							</thead>
							<tbody></tbody>
						</table>
					</div>
				</div>
			</nav>
			<main id="main">
				<div id="facetHeadingWrap">
					<details id="facetBooleanHeadingDetails">
						<summary id="facetBooleanHeading"></summary>
						<p id="facetBooleanDescription"></p>
					</details>

					<p id="facetDateHeading"></p>
				</div>
				<div id="pdf">
					<div id="pdfViewerOuter">
						<div id="pdfSearchBar">
							<button id="pdfSearchBarToggle">üîç</button>
							<div>
								<input type="search" placeholder="Search case" id="search-case" autocomplete="false" />
							</div>
							<div id="pdfSearchNavigation">
								<button id="pdfSearchPrev">‚¨Ü</button>
								<button id="pdfSearchNext">‚¨á</button>
							</div>
						</div>
						<div id="pdfViewer"></div>
					</div>

					<div id="pdfMinimap">
						<div id="saveWrap">
							<div id="saveHeading">
								Save facet as
							</div>
							<div id="submitDate">
								<div>
									<select id="dateSubmit"> </select>

									<div id="dateSeparated">
										<div>
											<label>Day</label>
											<input type="number" id="dateDay" placeholder="DD" />
										</div>
										<div>
											<label>Month</label>
											<input type="number" id="dateMonth" placeholder="MM" />
										</div>
										<div>
											<label>Year</label>
											<input type="number" id="dateYear" placeholder="YYYY" />
										</div>
									</div>

									<button id="dateSubmitButton">Submit</button>
									<button id="dateNAButton">N/A</button>
								</div>
							</div>

							<div id="submitBoolean">
								<button id="submitBooleanYes">‚úî Yes</button>
								<button id="submitBooleanNo">‚úò No</button>
								<button id="submitBooleanNA">N/A</button>
							</div>
						</div>
						<div id="pdfNavigation">
							<button id="pdfPrev">‚¨Ü</button>
							<button id="pdfNext">‚¨á</button>
						</div>
						<div id="pdfMinimapOuter">
							<div id="pdfMinimapInner"></div>
						</div>
					</div>
				</div>
			</main>

			<div id="case-facets">
				<table>
					<thead>
						<tr>
							<th>Facet</th>
							<th>Value</th>
							<th>Action</th>
							<th><span title="Completed count">#</span></th>
						</tr>
					</thead>
					<tbody></tbody>
				</table>
			</div>
		</div>
	</body>
</html>
